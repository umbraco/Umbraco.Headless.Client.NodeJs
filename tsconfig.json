{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "outDir": "dist",
    "declaration": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist",
    "etc",
    "temp",
    "samples"
  ],
  "include": [
    "src"
  ]
}
